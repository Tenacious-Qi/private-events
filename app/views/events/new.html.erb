<h1>Create a new event</h1>
<%= form_with(model: @event, local: true) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :location %>
  <%= f.text_field :location %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :start_time %>
  <%= f.date_field :start_time %>

  <%= f.submit "Create Event" %>
<% end %>
