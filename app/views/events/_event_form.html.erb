<%= form_with(model: @event, local: true, class: "columns is-mobile") do |f| %>
  <div class="column is-half-desktop is-offset-one-quarter-desktop">
    <%= render 'shared/error_messages', object: f.object %>
    <div class="field is-grouped-centered">
      <%= f.label :title, class: "label" %>
      <%= f.text_field :title, class: "input", placeholder: "A descriptive title" %>
    </div>

    <div class="field is-grouped-centered">
      <%= f.label :location, class: "label" %>
      <%= f.text_field :location, class: "input", placeholder: "Anywhere, USA" %>
    </div>

    <div class="field is-grouped-centered">
      <%= f.label :description, class: "label" %>
      <%= f.text_area :description, rows: 5, class: "input event-description", placeholder: "a short summary of important event information" %>
    </div>

    <div class="field is-grouped-centered">
      <%= f.label :start_time, class: "label" %>
      <%= f.date_field :start_time, class: "select" %>
    </div>

    <div class="field is-grouped-centered">
    <% if current_page?(action: :new) %>
      <%= f.submit "Create Event", class: "input has-background-success has-text-light has-text-weight-bold" %>
    <% else %>
      <%= f.submit "Update Event", class: "input has-background-info has-text-light has-text-weight-bold" %>
    <% end %>
    </div>
  </div>
<% end %>
