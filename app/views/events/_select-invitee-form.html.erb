<%= form_with(model: @event.host.sent_invitations.new, local: false ) do |f| %>
    <%= f.hidden_field :event_id, value: @event.id %>
    <div class="columns is-mobile">
      <div class="column is-three-fifths">
        <div class="select is-link">
        <%= f.collection_select(:invitee_ids, 
                                User.all.inviteable(@event),
                                :id, 
                                :name,
                                {include_blank: true}, {multiple: true}) %>
        </div>   
      </div>
      <div class="column is-two-fifths">
        <%= f.submit "Invite", class: "has-text-weight-bold button is-primary ", id: "send-invitation" %>
      </div>
    </div>
                           

    
<% end %>
