<%= form_with(model: @invitation_to_send, local: false ) do |f| %>
    <%= f.hidden_field :event_id, value: @event.id %>
    <div class="columns is-mobile">
      <div class="column is-three-fifths is-flex">
        <div class="select is-link">
        <%= f.collection_select(:invitee_id, 
                                User.all.where("id != ?", @event.host.id), 
                                :id, 
                                :name,
                                {prompt: 'Select an invitee'}) %>
        </div>   
      </div>
      <div class="column is-two-fifths is-flex">
        <%= f.submit "Invite", class: "has-text-weight-bold button is-primary ", id: "send-invitation" %>
      </div>
    </div>
                           

    
<% end %>
