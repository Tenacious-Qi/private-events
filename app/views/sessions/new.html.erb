<h1 class="is-size-4-desktop">Log In</h1>
<div class="has-text-centered">
  <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
      
  <%= f.label :email %>:
  <%= f.email_field :email%>

  <%= f.label :password %>:
  <%= f.password_field :password %>

  <%= f.label :remember_me %>
  <%= f.check_box :remember_me %>

  <%= f.submit "Log In" %>

  <% end %>
</div>
