  <section class="section">
    <div class="columns is-mobile">
      <h1 class="is-size-5 column is-half is-offset-one-quarter ">Login</h1>
    </div>
    
    <%= form_with(url: login_path, scope: :session, local: true, class: "columns is-mobile") do |f| %>
      <div class="column is-half is-offset-one-quarter">
        <div class="field is-grouped-centered">
          <%= f.label :email, class: "label has-text-light" %>
          <%= f.email_field :email, class: "input"%>
        </div>

        <div class="field is-grouped-centered">
          <%= f.label :password, class: "label has-text-light" %>
          <%= f.password_field :password, class: "input" %>
        </div>

        <div class="field is-grouped-centered">
          <%= f.label :remember_me, class: "label has-text-light" %>
          <%= f.check_box :remember_me, class: "checkbox" %>
        </div>

        <div class="field is-grouped-centered">
          <%= f.submit "Log In", class: "input" %>
        </div>
      </div>
    <% end %>
  </section>

