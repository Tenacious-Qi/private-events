<h2>
<%= @invitation.event.host.name %> invites <%= @invitation.invitee.name %> 
to <%= link_to @invitation.event.title, @invitation %>
</h2>

<h3>Current RSVP status: <%= @invitation.attending %> </h3>

<% if current_user == @invitation.invitee %>
  <%= form_with(model: @invitation, method: :patch, local: true) do |f| %>

    <%= f.hidden_field :event_id, value: @invitation.event.id %>
    <%= f.hidden_field :invitee_id, value: @invitation.invitee.id %>

    <%= f.radio_button :attending, 'yes'%>
    <%= f.label :attending, 'Yes' %>

    <%= f.radio_button :attending, 'no' %>
    <%= f.label :attending, 'No' %>

    <%= f.radio_button :attending, 'no response' %>
    <%= f.label :attending, 'No response'  %>

    <%= f.submit "Update RSVP" %>
  <% end %>
<% end %>

<%= link_to "Back to Event", @invitation.event%>