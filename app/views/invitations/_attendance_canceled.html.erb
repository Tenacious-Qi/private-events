<div class="columns is-desktop">
  <div class="column is-half is-offset-one-quarter">
    <div class="box">
      <div class="columns is-desktop">
        <div class="column is-half">
          <h3 class="is-size-4-desktop has-text-primary-dark subtitle is-5"> Attendance Canceled </h3>
        </div>
        <div class="column is-half">
          <ul>
            <% no_rsvps_future.each do |rsvp| %>
              <li class="is-capitalized">
                <div class="columns is-mobile">
                  <div class="column is-half">
                    <%= link_to rsvp.event.title, rsvp.event, class: "is-size-5-desktop" %>
                  </div>
                  <div class="column is-half">
                    <%= link_to "Update RSVP", rsvp.event, class: "ml-3 button is-small has-text-weight-bold has-text-light has-background-primary-dark" %>
                  </div>
                </div>
              </li>
            <% end %>
          </ul>

        </div>
      </div>
    </div>
  </div>
</div>
