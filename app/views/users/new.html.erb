<section class="section">
  <div class="columns is-centered">
    <div class="column is-half">
      <h1 class="has-text-centered has-text-info-dark is-size-5">Signup</h1>
      <%= form_with(model: @user, local: true, class: "columns is-mobile") do |f| %>
        <div class="column is-half-desktop is-offset-one-quarter-desktop">
          <%= render 'shared/error_messages', object: f.object %>
          <div class="field is-grouped-centered">
            <%= f.label :name, class: "label" %>
            <%= f.text_field :name, class: "input" %>
          </div>

          <div class="field is-grouped-centered">
            <%= f.label :email, class: "label" %>
            <%= f.email_field :email, class: "input"%>
          </div>

          <div class="field is-grouped-centered">
            <%= f.label :password, class: "label" %>
            <%= f.password_field :password, class: "input" %>
          </div>

          <div class="field is-grouped-centered">
            <%= f.label :password_confirmation, class: "label" %>
            <%= f.password_field :password_confirmation, class: "input" %>
          </div>

          <div class="field is-grouped-centered">
            <%= f.submit "Create Account", class: "input has-background-primary-dark has-text-light has-text-weight-bold" %>
          </div>
        </div>
      <% end %>
      <p class="has-text-dark has-text-centered">Already registered? Click <%= link_to "here", login_path %> to login.</p>
    </div>
  </div>


</section>
