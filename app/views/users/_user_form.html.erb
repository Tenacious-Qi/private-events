<%= form_with(model: @user, local: true, class: "columns is-mobile") do |f| %>
  <div class="column is-half-desktop is-offset-one-quarter-desktop">
    <%= render 'shared/error_messages', object: f.object %>
    <div class="field is-grouped-centered">
      <%= f.label :name, class: "label" %>
      <%= f.text_field :name, class: "input" %>
    </div>

    <div class="field is-grouped-centered">
      <%= f.label :email, class: "label" %>
      <%= f.email_field :email, class: "input"%>
    </div>

    <div class="field is-grouped-centered">
      <%= f.label :password, class: "label" %>
      <%= f.password_field :password, class: "input" %>
    </div>

    <div class="field is-grouped-centered">
      <%= f.label :password_confirmation, class: "label" %>
      <%= f.password_field :password_confirmation, class: "input" %>
    </div>

    <div class="field is-grouped-centered">
      <% if viewing_sign_up_page? %>
        <%= f.submit "Create Account", class: "input button is-primary has-text-light has-text-weight-bold" %>
      <% else %>
        <%= f.submit "Update Account", class: "input button is-info has-text-light has-text-weight-bold" %>
      <% end %>
    </div>
  </div>
<% end %>
